{
  "name": "inlined-copy",
  "displayName": "inlined Copy",
  "description": "Copy text with inlined content",
  "version": "0.1.8",
  "publisher": "frecre",
  "icon": "assets/icon.png",
  "license": "MIT",
  "author": {
    "name": "gong",
    "email": "gong@frecre.com"
  },
  "galleryBanner": {
    "color": "#3B4252",
    "theme": "dark"
  },
  "preview": true,
  "engines": {
    "vscode": "^1.94.0"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "markdown",
    "copy",
    "inline",
    "formatting",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gongnyaa/inlined-copy"
  },
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inlined-copy.copyInline",
        "category": "Inlined Copy",
        "title": "Copy Inline"
      }
    ],
    "keybindings": [
      {
        "command": "inlined-copy.copyInline",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Inlined Copy",
      "properties": {
        "inlined-copy.maxFileSize": {
          "type": "number",
          "default": 5242880,
          "description": "Maximum file size in bytes (default: 5MB)"
        },
        "inlined-copy.maxRecursionDepth": {
          "type": "number",
          "default": 1,
          "maximum": 3,
          "description": "Maximum depth for recursive file expansion (default: 1, max: 3)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "rimraf out && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "gi": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev": "pnpm run watch",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/glob": "^7.2.0",
    "@types/node": "^18.19.83",
    "@types/vscode": "1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "3.0.9",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "glob": "^11.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9"
  }
}
