{
  "name": "inlined-copy",
  "displayName": "inlined Copy",
  "description": "Copy text inline without formatting from Markdown files",
  "version": "0.0.1",
  "publisher": "gongnyaa",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "markdown",
    "copy",
    "inline",
    "formatting",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gongnyaa/inlined-copy"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inlined-copy.copyInline",
        "category": "Inlined Copy",
        "title": "Copy Inline"
      }
    ],
    "keybindings": [
      {
        "command": "inlined-copy.copyInline",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Inlined Copy",
      "properties": {
        "inlined-copy.maxSearchDepth": {
          "type": "number",
          "default": 3,
          "description": "Maximum depth for proximity-based file search"
        },
        "inlined-copy.maxFileSize": {
          "type": "number",
          "default": 5242880,
          "description": "Maximum file size in bytes (default: 5MB)"
        },
        "inlined-copy.maxRecursionDepth": {
          "type": "number",
          "default": 1,
          "maximum": 3,
          "description": "Maximum depth for recursive file expansion (default: 1, max: 3)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev": "pnpm run watch"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "~14.18.63",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "glob": "^7.2.3",
    "typescript": "^4.9.5",
    "vitest": "^3.0.9",
    "vscode-test": "^1.6.1"
  }
}
