{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": ["node_modules", ".vscode-test", "out"]
}
